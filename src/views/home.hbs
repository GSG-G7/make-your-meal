<main class="container">
  <div class="search-div" id="search-div">
    <form action="/search" method="POST">
      <input type="text" name="input" class="input" id="input" placeholder="Enter Your Meal !!">
      <input type="submit" class="search-btn" id="search-btn">
      {{!-- <button class="search-random-btn" id="search-random-btn">Random Meal</button> --}}
    </form>
  </div>
  <div class="result" id="result">
      {{#each meals}}
    <div class="meal">
      
        <div class ='meal-img-div'>
          <img src="{{this.strMealThumb}}" alt="meal-image" class="meal-img">
        </div>
        <div class="meal-content">
          <h1 class="meal-name">{{this.strMeal}} </h1>
        <div class="ingratients">
          <h3>Ingratients</h3>
          <ul class="ingratients-list">
            <li>{{this.strIngredient1}}</li>
            <li>{{this.strIngredient2}}</li>
            <li>{{this.strIngredient3}}</li>
          </ul>
        </div>
        <p class="youtube-para">You can watch how to make it here:</p>
        <a class="youtubeLink" href="{{this.strYoutube}}">Youtube</a>
        {{!-- <p class="source-para">source : </p> --}}
        <a class="youtubeLink" href={{this.strSource}}>Source Link</a>
      </div>

    </div>
       
      {{/each}}
  </div>
</main>

